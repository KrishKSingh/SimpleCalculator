<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="0dp"
    android:paddingVertical="0dp"
    tools:context="com.example.krishnakumar.simplecalculator.MainActivity">

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/btnPlus"
        android:layout_toEndOf="@+id/btnThree"
        android:background="@color/colorAccent"
        android:onClick="onClickOperator"
        android:text="-"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/btnPlus"
        android:layout_toEndOf="@+id/btnFive"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="6"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/btnMinus"
        android:layout_toEndOf="@+id/btnTwo"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnEq"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/btnThree"
        android:layout_toEndOf="@+id/btnTwo"
        android:background="@color/colorAccent"
        android:onClick="onClickEqual"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnFour"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnClr"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnOne"
        android:background="@color/colorAccent"
        android:onClick="onClickClear"
        android:text="C"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/btnPlus"
        android:layout_toEndOf="@+id/btnSeven"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="5"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSeven"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="4"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/txtView"
        android:layout_toEndOf="@+id/btnSix"
        android:background="@color/colorAccent"
        android:onClick="onClickOperator"
        android:text="+"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/btnMul"
        android:layout_toEndOf="@+id/btnThree"
        android:background="@color/colorAccent"
        android:onClick="onClickOperator"
        android:text="/"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/btnMinus"
        android:layout_toEndOf="@+id/btnThree"
        android:background="@color/colorAccent"
        android:onClick="onClickOperator"
        android:text="X"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/txtView"
        android:layout_toEndOf="@+id/btnFive"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/btnFive"
        android:layout_toEndOf="@+id/btnFour"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/btnTwo"
        android:layout_toEndOf="@+id/btnClr"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_below="@+id/txtView"
        android:layout_toEndOf="@+id/btnSeven"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="8"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        android:gravity="bottom|right"
        android:maxLength="17"
        android:maxLines="2"
        android:padding="0dp"
        android:text="0"
        android:textSize="70sp" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtView"
        android:layout_margin="0dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="23dp"
        android:background="@color/colorAccent"
        android:onClick="onClickNumber"
        android:text="7"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />
</RelativeLayout>

